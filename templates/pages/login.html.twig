{% extends 'base.html.twig' %}

{% block title %}
  Welcome | Bienvenu{% endblock %}

{% block content %}
  <div class="">
    <link rel="stylesheet" href="/css/semantic.css">
    <div class="container mt-5">
      <div class="row ">
        <div class="broder-primary bg-white border mt-5 pt-3 pb-4 col-sm-10 offset-sm-1 col-md-6 offset-md-3">
          <div class="row p-5">
            <div class="col-12">
              {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
            </div>
            <div class="col-12">
              <form method="post">
              <div id="login_div" class="row">

                    <div class="w-100">
                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">
                            Email :
                          </span>
                        </div>
                        <input type="email" id="inputEmail"  name="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1" required />
                      </div>
                        <div class="input-group mb-3">
                          <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              Mot de passe
                            </span>
                          </div>
                          <input type="password" name="password" id="inputPassword"  class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" required />
                        </div>
                    </div>
              </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
              <div class="col-12 mt-3 text-center">
                <button type="submit" class="btn btn-square btn-primary" name="button">Se connecter</button>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  </script>
{% endblock %}

{% block footer %}{% endblock %}
