{% extends 'base.html.twig' %}

{% block content %}




<section class="mt-5">
        <div class="p-3 m-0 pl-5 w-100 bg-color text-white">
          <h3> Cr√©ation de nouveau questionnaire  </h3>
        </div>
        <div class="row p-3 m-0 pl-5 w-100 bg-white">
          <div class="col-6">
            <div class="p-3 m-0 pl-5 w-100 bg-white">
              <div class="p-3">
                <form class="form-horizontal" action="/survey/addAction" method="post">
                  <div class="row mb-3">
